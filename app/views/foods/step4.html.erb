<p id="notice"><%= notice %></p>

<h4><strong>Listing Foods</strong></h4>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Calories</th>
      <th>Egg Allergy</th>
      <th>Fish Allergy</th>
      <th>Shellfish Allergy</th>
      <th>Soy Allergy</th>
      <th>Dairy Allergy</th>
      <th>Milk Allergy</th>
      <th>Wheat Allergy</th>
      <th>G6PD Allergy</th>
      <th>Vegetarian</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.type.name %></td>
        <td><%= food.calories %></td>
        <td><%= food.eggAllergy %></td>
        <td><%= food.fishAllergy %></td>
        <td><%= food.shellfishAllergy %></td>
        <td><%= food.soyAllergy %></td>
        <td><%= food.dairyAllergy %></td>
        <td><%= food.milkAllergy %></td>
        <td><%= food.wheatAllergy %></td>
        <td><%= food.g6pdAllergy %></td>
        <td><%= food.vegetarian %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

