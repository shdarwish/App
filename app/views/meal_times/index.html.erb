<!-- it is the page that list all the meal times in the system -->
       

<!-- Start meal time Heading Section -->
<div class='content'>
  <div class='button'></div>
  <div class="mainbody-section text-center">
    <div class="container">
      <div class="row">
        <div id="appHeading" class="section-title text-center">
          <h3>Listing Meal Timings</h3>
          <p>Add, Edit and Delete Meal Timings</p>
        </div>
      </div>
<!--end of meal time heading section-->
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div id="listingappPanel">
            <div class="panel-body shadbox">
              <table class="table text-left" >
                <tr>
                  <th>Meal Timings</th>
                </tr>
                <% @meal_times.each do |meal_time| %>
                  <tr>
                                            
                  <td><%= meal_time.time %></td>
                  <td> 
                    <div class="pull-right hidden-phone">
                      <div id="listingappbuttons">
                        <button class="btn btn-default btn-xs">
                          <!--<i class="fa fa-check"></i>-->
                          <%= link_to '', meal_time, :class =>'fa fa-check' %>
                        </button>
                        <button class="btn btn-default btn-xs">
                          <!--<i class="fa fa-pencil"></i>-->
                          <%= link_to '', edit_meal_time_path(meal_time), :class =>'fa fa-pencil' %>
                        </button>
                        <button class="btn btn-default btn-xs">
                          <!--<i class="fa fa-times"></i>-->
                          <%= link_to '', meal_time, method: :delete, data: { confirm: 'Are you sure?' }, :class =>'fa fa-times' %>
                        </button>
                      </div>
                    </div>
                  </td>
                  </tr>
                <% end %>
              </table>
              <%= link_to 'Add New Meal Time', new_meal_time_path, class: 'appformbutton btn btn-info appbackbutton'%>
              <%= link_to 'Back', admin_path, class: 'appformbutton btn btn-info appbackbutton'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
               