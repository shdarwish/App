<!--  the first step in configure a meal process, which lists all the meal timings that are in the system -->


<!-- Start users Heading Section -->
<div class='content'>
  <div class='button'></div>
  <div class="mainbody-section text-center">
    <div class="container">
      <div class="row">
        <div id="appHeading" class="section-title text-center">
          <h3>Step 1</h3>
          <p>Choose your desired timing</p>
        </div>
      </div>
<!--end of users heading section-->
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          
            <div class=" shadbox">
              <div class="step1font">
              <table class="table text-center" >
                

                <% @meal_times.each do |meal_time| %>
                  <tr>
                  <td>
                    <%= link_to meal_time.time, configure_a_meal_step1_path(:time => meal_time.time ) %>
                  </td>
                  </tr>

                  <% end %>
                </table>
                </div>

            </div>

            
        </div>
      </div>
    </div>
  </div>
</div>


