<p id="notice"><%= notice %></p>

<h4><strong>Listing Foods</strong></h4>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Restaurant</th>
      <th>Food timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.type.name %></td>
        <td><%= food.restaurant_id %></td>
        <td><%= food.food_timing_id %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

